{
	"schema": {
		"search": {
			"form": {
				"properties": {
					"moduleFlag": {
						"component": "input",
						"label": "模块类型：",
						"type": "number",
						"formItemProps": { "labelWidth": 100 },
						"span": 6
					},
					"name": {
						"component": "input",
						"label": "名字：",
						"type": "string",
						"formItemProps": { "labelWidth": 100 },
						"span": 6
					},
					"remark": {
						"component": "input",
						"label": "备注：",
						"type": "string",
						"formItemProps": { "labelWidth": 100 },
						"span": 6
					}
				}
			},
			"resetButton": true,
			"searchButton": true
		},
		"title": "角色列表",
		"buttons": [
			{
				"title": "新增",
				"type": "primary",
				"trigger": {
					"type": "dialog",
					"form": {
						"url": "/admin/api/roles",
						"method": "POST",
						"schema": {
							"properties": {
								"moduleFlag": {
									"component": "input",
									"label": "模块：",
									"type": "number",
									"formItemProps": { "labelWidth": 100 }
								},
								"name": {
									"component": "input",
									"label": "名字：",
									"formItemProps": { "labelWidth": 100 }
								},
								"remark": {
									"component": "input",
									"label": "备注：",
									"formItemProps": { "labelWidth": 100 }
								}
							}
						}
					},
					"dialogProps": { "title": "角色新增" }
				}
			}
		],
		"table": {
			"url": "/admin/api/roles",
			"method": "GET",
			"selection": true,
			"schema": {
				"columns": [
					{ "prop": "bindingQuantity", "label": "绑定菜单数量", "width": 120 },
					{ "prop": "createTime", "label": "创建时间", "width": 200 },
					{ "prop": "createdBy", "label": "创建人", "width": 120 },
					{ "prop": "deleteTime", "label": "删除时间", "width": 200 },
					{ "prop": "id", "label": "主键" },
					{ "prop": "moduleFlag", "label": "模块类型" },
					{ "prop": "name", "label": "名字", "width": 120 },
					{ "prop": "updateTime", "label": "更新时间", "width": 200 },
					{ "prop": "updatedBy", "label": "更新人", "width": 120 },
					{
						"prop": "id",
						"label": "操作",
						"width": 140,
						"fixed": "right",
						"buttons": [
							{
								"title": "编辑",
								"type": "primary",
								"trigger": {
									"type": "dialog",
									"form": {
										"url": "/admin/api/roles",
										"method": "PUT",
										"schema": {
											"properties": {
												"moduleFlag": {
													"component": "input",
													"label": "模块：",
													"type": "number",
													"formItemProps": { "labelWidth": 100 }
												},
												"name": {
													"component": "input",
													"label": "名字：",
													"formItemProps": { "labelWidth": 100 }
												},
												"remark": {
													"component": "input",
													"label": "备注：",
													"formItemProps": { "labelWidth": 100 }
												}
											}
										}
									},
									"dialogProps": { "title": "角色更新" }
								}
							},
							{
								"title": "删除",
								"type": "danger",
								"trigger": {
									"type": "popconfirm",
									"url": "/admin/api/roles/{id}",
									"method": "DELETE",
									"confirmProps": { "title": "确认删除？" }
								}
							}
						]
					}
				]
			}
		},
		"pagination": true
